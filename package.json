{
  "name": "@helpful-hooks/use-fetch",
  "version": "1.0.0",
  "description": "Helpful React hook for api calls",
  "main": "./dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "fmt": "prettier ./src --write",
    "check": "tsc --noEmit -p ./tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "taennan <taennan.dev@protonmail.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/taennan/use-fetch.git",
    "type": "git"
  },
  "keywords": [
    "react",
    "hook",
    "fetch",
    "library"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.29.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>",
      "src"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    },
    "testRegex": ".*\\.test\\.(ts|tsx)$",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "jsdom"
  }
}
